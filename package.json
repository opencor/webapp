{
  "author": {
    "name": "Alan Garny",
    "email": "a.garny@auckland.ac.nz"
  },
  "binary": {
    "napi_versions": [
      9
    ]
  },
  "bugs": {
    "url": "https://github.com/opencor/webapp/issues"
  },
  "description": "A Web-based modelling environment for organising, editing, simulating, and analysing CellML files.",
  "homepage": "https://opencor.ws/",
  "license": "Apache-2.0",
  "main": "./out/main/index.cjs",
  "name": "@opencor/opencor",
  "private": true,
  "productName": "OpenCOR",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencor/webapp.git"
  },
  "type": "module",
  "version": "0.20251203.0",
  "scripts": {
    "archive:web": "bun src/renderer/scripts/archive.web.js",
    "build": "electron-vite build",
    "build:web": "cd ./src/renderer && vite build",
    "clean": "bun src/renderer/scripts/clean.js",
    "dependencies:update": "bun clean && bun update && bun install && cd ./src/renderer && bun clean && bun update && bun install",
    "dev": "electron-vite dev --watch",
    "dev:web": "cd ./src/renderer && vite dev",
    "format": "bunx --bun biome format --fix --max-diagnostics=none && clang-format -i src/renderer/src/libopencor/src/*",
    "format:check": "bunx --bun biome format --max-diagnostics=none && clang-format --dry-run -Werror src/renderer/src/libopencor/src/*",
    "libopencor": "cmake-js build -B Release -O ./dist/libOpenCOR",
    "lint": "bunx --bun biome lint --fix --error-on-warnings --max-diagnostics=none",
    "release": "electron-builder",
    "release:local": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --publish=never",
    "start": "electron-vite preview",
    "start:web": "bun build:web && cd ./src/renderer && vite preview",
    "version:new": "bun src/renderer/scripts/version.js"
  },
  "peerDependencies": {
    "vue": "3.4.21"
  },
  "dependencies": {
    "@napi-rs/keyring": "^1.2.0",
    "@primeuix/themes": "^1.2.5",
    "@primevue/auto-import-resolver": "4.2.5",
    "@vueuse/core": "12.8.2",
    "firebase": "^12.6.0",
    "jsonschema": "^1.5.0",
    "octokit": "^5.0.5",
    "primeicons": "^7.0.0",
    "primevue": "4.2.5",
    "quill": "^2.0.3",
    "systeminformation": "^5.27.11",
    "ua-parser-js": "^2.0.6",
    "vue": "3.4.21"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/plotly.js": "3.0.3",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "@wasm-fmt/clang-format": "^21.1.6",
    "autoprefixer": "^10.4.22",
    "cmake-js": "^7.4.0",
    "electron": "^38.7.2",
    "electron-builder": "^26.0.12",
    "electron-conf": "^1.3.0",
    "electron-updater": "^6.6.2",
    "electron-vite": "^4.0.1",
    "node-addon-api": "^8.5.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-primeui": "^0.6.1",
    "tar": "^7.5.2",
    "unplugin-vue-components": "^29.2.0",
    "vite": "^7.2.6"
  }
}
