{
  "author": {
    "name": "Alan Garny",
    "email": "a.garny@auckland.ac.nz"
  },
  "bugs": {
    "url": "https://github.com/opencor/webapp/issues"
  },
  "description": "A Web-based modelling environment for organising, editing, simulating, and analysing CellML files.",
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "homepage": "https://opencor.ws/",
  "keywords": [
    "vue",
    "component",
    "opencor",
    "cellml",
    "sed-ml",
    "omex",
    "combine"
  ],
  "license": "Apache-2.0",
  "module": "dist/opencor.es.js",
  "name": "@opencor/opencor",
  "productName": "OpenCOR",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencor/webapp.git"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/opencor.es.js"
    },
    "./style.css": "./dist/opencor.css"
  },
  "version": "0.20251027.0",
  "scripts": {
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.ts && cp index.d.ts dist/index.d.ts",
    "clean": "bun scripts/clean.js",
    "dev": "vite dev",
    "format": "bunx --bun biome format --fix --max-diagnostics=none && clang-format -i src/libopencor/src/*",
    "format:check": "bunx --bun biome format --max-diagnostics=none && clang-format --dry-run -Werror src/libopencor/src/*",
    "lint": "bunx --bun biome lint --fix --error-on-warnings --max-diagnostics=none",
    "start": "bun run build && vite preview",
    "version:new": "bun scripts/version.js"
  },
  "peerDependencies": {
    "mathjs": "^14.9.1",
    "plotly.js-gl2d-dist-min": "^3.1.1",
    "vue": "3.4.21"
  },
  "dependencies": {
    "@primeuix/themes": "^1.2.5",
    "@primevue/auto-import-resolver": "4.2.5",
    "@vueuse/core": "12.8.2",
    "js-cookie": "^3.0.5",
    "jsonschema": "^1.5.0",
    "primeicons": "^7.0.0",
    "primevue": "4.2.5",
    "quill": "^2.0.3",
    "ua-parser-js": "^2.0.6",
    "vue": "3.4.21"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^24.9.1",
    "@types/plotly.js": "3.0.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "tailwindcss": "^4.1.16",
    "tailwindcss-primeui": "^0.6.1",
    "unplugin-vue-components": "^29.2.0",
    "vite": "^7.1.12"
  }
}
